# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Environment
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_NAME=WKR Tool
NEXT_PUBLIC_APP_VERSION=0.1.0

# AI Configuration (Optional - defaults are provided)
GEMINI_MODEL=gemini-2.5-pro
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=128000

# Rate Limiting (Optional - defaults are provided)
GEMINI_MAX_REQUESTS_PER_MINUTE=60
GEMINI_RATE_LIMIT_WINDOW_MS=60000

# Performance Monitoring (Optional)
ENABLE_PERFORMANCE_MONITORING=true
MAX_STORED_METRICS=1000

# Security (Optional)
ALLOWED_ORIGINS=http://localhost:3000